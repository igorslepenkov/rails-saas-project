<% f = locals[:f] %>
<div class="field">
  <%= f.label :title, class: "lead"  %><br />
  <%= f.text_field :title, autofocus: true, class: "form-control"  %>
</div>
<div class="field">
  <%= f.label :details, class: "lead"  %><br />
  <%= f.text_area :details, class: "form-control"  %>
</div>
<div class="field">
  <%= f.label :expected_completion_date, class: "lead" %><br />
  <div class="input-group">
    <%= f.date_select :expected_completion_date, {}, {class: "form-select"} %>
  </div>
</div>
<div class="org-submit actions d-flex flex-column">
  <em class="text-danger mb-2 mt-2">all fields are requred</em>
  <%= f.submit "Submit", class: "btn btn-light btn-lg mb-3"  %>
</div>
