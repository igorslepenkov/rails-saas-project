<!DOCTYPE html>
<html>
  <head>
    <title>Rails SaaS Project</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>
  <body class="container d-flex flex-column min-vh-100 text-center text-white bg-dark">
    <%= render 'layouts/header' %>
    <%= render 'layouts/messages' %>
    <%= render 'layouts/redirect' if redirected? && !organization_signed_in? %>
    <main class="flex-grow-1 d-flex align-items-stretch">
      <%= yield %>
    </main>
    <%= render 'layouts/footer' %>
  </body>
</html>
