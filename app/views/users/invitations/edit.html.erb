<div class="w-100 d-flex flex-column justify-content-center align-items-center">
  <h2><%= t "devise.invitations.edit.header" %></h2>
  <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), data:{turbo_method: :put}) do |f| %>
    <%= f.hidden_field :invitation_token, readonly: true %>
    <% if f.object.class.require_password_on_accepting %>
      <div class="field">
        <%= f.label :password, class: "lead" %><br />
        <%= f.password_field :password, class: "form-control" %>
      </div>
      <div class="field">
        <%= f.label :password_confirmation, class: "lead" %><br />
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>
    <% end %>
    <div class="actions">
      <%= f.submit "Set password", class: "btn btn-lg btn-light" %>
    </div>
  <% end %>
</div>
