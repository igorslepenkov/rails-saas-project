<div class="w-100 d-flex flex-column justify-content-center align-items-center">
  <h2><%= t "devise.invitations.new.header" %></h2>
  <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), data:{turbo_method: :post}) do |f| %>
    <% resource.class.invite_key_fields.each do |field| -%>
      <div class="field">
        <%= f.label field, class: "lead" %><br />
        <%= f.text_field field, class: "form-control" %>
      </div>
    <% end -%>
    <div class="field">
      <%= f.label :first_name, class: "lead" %><br />
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
    <div class="field">
      <%= f.label :last_name, class: "lead" %><br />
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
    <div class="actions">
      <%= f.submit "Invite User", class: "btn btn-light btn-lg mb-3" %>
    </div>
  <% end %>
</div>
